<!DOCTYPE html>
<html>
<head>
  <title>Tenbaggers</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet">
</head>

<div class="top-bar">
  <div class="top-bar-content">
    <div class="top-bar-left">
      <h1 class="logo"><%= link_to "tenbaggers ðŸ’°", root_path %></h1>
    </div>
    <div class="top-bar-right">
        <% if signed_in? %>
          <ul class="dropdown menu" data-dropdown-menu>
            <li class="menu-link"><%= link_to "My Portfolios", "/users/#{current_user.id}" %></li>
            <li class="menu-link"><%= link_to "Create Portfolio", portfolios_new_path %></li>
            <li class="menu-link"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          </ul>
        <% else %>
          <ul class="menu">
            <li class="menu-link"><%= link_to "Sign In", new_user_session_path %></li>
            <li class="menu-link sign-up-link"><%= link_to "Sign Up", new_user_registration_path %></li>
          </ul>
        <% end %>
    </div>
  </div>
</div>


<body>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  
  <%- if Rails.env.development? || Rails.env.test? -%> 
    <%= javascript_tag do %>
      window.railsEnv = '<%= Rails.env %>'
    <%- end -%>
  <%- end -%>
  <%= javascript_pack_tag 'application' %>
  
  <%= yield :extra_footer %>
</body>
</html>
